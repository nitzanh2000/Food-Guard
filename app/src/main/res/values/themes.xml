<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
         <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.FoodGuard" parent="Base.Theme.FoodGuard" />


    <style name="CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/secondary</item>
    </style>


    <!-- Time Picker Custom Theme -->
    <style name="CustomTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSurface">@color/background</item>
        <item name="colorOnSurface">@color/primary</item>

        <item name="colorPrimaryContainer">@color/primary</item> <!-- HH/MM button background -->
        <item name="colorOnPrimaryContainer">@color/white</item> <!-- HH/MM button text -->

        <item name="colorTertiaryContainer">@color/primary</item> <!-- AM/PM button background -->
        <item name="colorOnTertiaryContainer">@color/white</item> <!-- AM/PM button text -->

        <item name="colorSurfaceVariant">@color/background</item> <!-- clock circle bg -->
        <item name="colorOnSurfaceVariant">@color/primary</item> <!-- left text and icon -->

    </style>

</resources>