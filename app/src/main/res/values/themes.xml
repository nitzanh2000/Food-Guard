<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FoodGuard" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primary</item>
         <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="Theme.FoodGuard" parent="Base.Theme.FoodGuard" />


    <style name="CustomDatePicker" parent="ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/secondary</item>
    </style>


    <!-- Time Picker Custom Theme -->
    <style name="CustomTimePicker" parent="ThemeOverlay.Material3.MaterialTimePicker">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorOnPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/secondary</item>
        <item name="colorOnSurface">@color/primary</item>

        <!-- AM/PM Button Colors -->
        <item name="colorPrimaryContainer">@color/secondary</item> <!-- AM/PM button background -->
        <item name="colorOnPrimaryContainer">@color/colorAccent</item> <!-- AM/PM button text -->

        <item name="colorSurfaceVariant">@color/secondary</item>
        <item name="colorOnSurfaceVariant">@color/primary</item>

    </style>

</resources>