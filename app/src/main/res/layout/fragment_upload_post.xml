<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/gray_rounded_background">

        <!-- Profile section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_profile_placeholder"
                android:contentDescription="Profile Photo"
                android:layout_marginEnd="8dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImageViewStyle"
                android:background="@drawable/circle_background" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Israel Israeli"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Upload photo section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/upload_photo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_upload"
                android:contentDescription="Upload Icon"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/browse_files_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Browse files"
                app:cornerRadius="8dp"
                android:backgroundTint="@color/button_color"
                android:textColor="@color/black" />

        </LinearLayout>

        <!-- Text input for description -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="text"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter description"
            android:background="@drawable/rounded_edit_text_background"
            android:padding="8dp"
            android:layout_marginTop="8dp" />

        <!-- Details section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="16dp">

            <!-- Servings Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Servings"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/servings_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Servings"
                    android:background="@drawable/rounded_edit_text_background"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_servings"
                    android:inputType="number"
                    android:drawablePadding="8dp" />

            </LinearLayout>

            <!-- Address Input -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal" />

                <EditText
                    android:id="@+id/address_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Address"
                    android:background="@drawable/rounded_edit_text_background"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_location"
                    android:drawablePadding="8dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Availability date and time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_gravity="center_horizontal"
            android:text="Available till.."
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/date_time_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text_background"
            android:padding="8dp"
            android:hint="Select date and time"
            android:focusable="false"
            android:clickable="true" />

        <Button
            android:id="@+id/upload_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Upload Post"
            app:cornerRadius="8dp"
            android:backgroundTint="@color/button_color"
            android:textColor="@color/black"/>

    </LinearLayout>

</LinearLayout>
